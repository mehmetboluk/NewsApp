    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.mehmetboluk.newsapp.view.fragments.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.mehmetboluk.newsapp.view.fragments.FavoriteFragment"
